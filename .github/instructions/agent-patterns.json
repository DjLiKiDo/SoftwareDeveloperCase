      "name": "Compilation Error Recovery",
      "trigger": "Build fails after code changes",
      "solution": {
        "steps": [
          "Save current state",
          "Identify changed files",
          "Revert changes incrementally",
          "Test after each revert",
          "Identify problematic change",
          "Apply fix or alternative approach"
        ]
      },
      "success_rate": 0.92,
      "usage_count": 15
    },
