      "name": "Session Context Recovery",
      "trigger": "New session with existing CURRENT-TASK.md",
      "solution": {
        "steps": [
          "Read CURRENT-TASK.md",
          "Load last checkpoint",
          "Verify file states",
          "Summarize progress",
          "Confirm continuation approach"
